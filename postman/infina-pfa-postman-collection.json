  "item": [
    {
      "name": "Users",
      "description": "User profile management endpoints",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            },
            "description": "Retrieve the authenticated user's profile information including financial stage and onboarding status"
          },
          "response": []
        },
        {
          "name": "Create User Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"financialStage\": \"BEGINNER\",\n    \"onboardingCompleted\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            },
            "description": "Create a new user profile for the authenticated user with basic information"
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Smith\",\n    \"financialStage\": \"INTERMEDIATE\",\n    \"onboardingCompleted\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            },
            "description": "Update the authenticated user's profile information including name and financial stage"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Budgets",
      "description": "Budget management endpoints",
      "item": [
        {
          "name": "Create Budget",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Groceries\",\n    \"month\": 5,\n    \"year\": 2024,\n    \"category\": \"flexible\",\n    \"amount\": 500,\n    \"icon\": \"food\",\n    \"color\": \"#FF5733\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/budgets",
              "host": ["{{base_url}}"],
              "path": ["budgets"]
            },
            "description": "Create a new budget for the current user"
          },
          "response": []
        },
        {
          "name": "Get All Budgets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/budgets?month=5&year=2024",
              "host": ["{{base_url}}"],
              "path": ["budgets"],
              "query": [
                {
                  "key": "month",
                  "value": "5"
                },
                {
                  "key": "year",
                  "value": "2024"
                }
              ]
            },
            "description": "Get all budgets for the current user in a specific month and year"
          },
          "response": []
        },
        {
