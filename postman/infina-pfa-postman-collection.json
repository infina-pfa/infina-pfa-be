              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/budgets/{{budget_id}}",
              "host": ["{{base_url}}"],
              "path": ["budgets", "{{budget_id}}"]
            },
            "description": "Get detailed information about a specific budget"
          },
          "response": []
        },
        {
          "name": "Update Budget",
